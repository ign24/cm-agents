      "position": "top-center"
    },
    "logo": {
      "position": "top-right",
      "size": "small",
      "opacity": 1.0
    }
  },
  
  "social_media": {
    "instagram": "@mi_marca",
    "facebook": "MiMarca",
    "platforms": ["instagram", "facebook"]
  },
  
  "hashtags": {
    "always": ["#MiMarca", "#BrandConsistency"],
    "categories": {
      "product": ["#Producto", "#Campaign", "#SocialCreative"],
