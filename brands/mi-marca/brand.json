{
  "name": "Mi Marca",
  "handle": "@mi_marca",
  "industry": "retail",
  
  "identity": {
    "tagline": "Diseno visual con identidad clara",
    "voice": ["profesional", "claro", "confiable"],
    "values": ["calidad", "consistencia", "claridad de marca"]
  },
  
  "assets": {
    "logo": "assets/logo.png",
    "logo_white": "assets/logo-white.png",
    "icon": "assets/icon.png"
  },
  
  "logo": "assets/logo.png",
  
  "palette": {
    "primary": "#1E3A8A",
    "secondary": "#0EA5E9",
    "background": "#FFFFFF",
    "text": "#212121",
    "accent": "#10B981",
    "gradient": ["#1E3A8A", "#0EA5E9"]
  },
  
  "fonts": {
    "heading": "fonts/Montserrat-Bold.ttf",
    "body": "fonts/OpenSans-Regular.ttf",
    "price": "fonts/Montserrat-ExtraBold.ttf"
  },
  
  "typography": {
    "heading": {
      "font": "fonts/Montserrat-Bold.ttf",
      "style": "bold, clean, high-contrast"
    },
    "body": {
      "font": "fonts/OpenSans-Regular.ttf",
      "style": "readable, friendly"
    },
    "price": {
      "font": "fonts/Montserrat-ExtraBold.ttf",
      "style": "bold, promotional, readable"
    }
  },
  
  "style": {
    "mood": ["moderno", "profesional", "dinamico"],
