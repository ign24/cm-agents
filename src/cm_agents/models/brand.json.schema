{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brand",
  "description": "Configuración de marca para generación de contenido",
  "type": "object",
  "required": ["name", "palette", "style"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Nombre de la marca"
    },
    "handle": {
      "type": "string",
      "description": "Handle de Instagram (@marca)"
    },
    "palette": {
      "type": "object",
      "required": ["primary", "secondary"],
      "properties": {
        "primary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "secondary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "background": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "text": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "accent": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
      }
    },
    "fonts": {
      "type": "object",
      "properties": {
        "heading": { "type": "string" },
        "body": { "type": "string" },
        "price": { "type": "string" }
      }
    },
    "style": {
      "type": "object",
      "properties": {
        "mood": { "type": "array", "items": { "type": "string" } },
        "photography_style": { "type": "string" },
        "preferred_backgrounds": { "type": "array", "items": { "type": "string" } }
      }
    },
    "text_overlay": {
      "type": "object",
      "properties": {
        "price_badge": {
          "type": "object",
          "properties": {
            "bg_color": { "type": "string" },
            "text_color": { "type": "string" },
            "position": { "type": "string", "enum": ["top-left", "top-right", "bottom-left", "bottom-right"] },
            "padding": { "type": "integer" }
          }
        },
        "title": {
          "type": "object",
          "properties": {
            "color": { "type": "string" },
            "shadow": { "type": "boolean" },
            "position": { "type": "string" }
          }
        }
      }
    }
  }
}
